<div class="content-fit">
    <div class="products">
        {% for product in collection.products %}
            <div class="product">
                <a href="{{ product.url }}">
                    <img src="{{ product.featured_image | image_url: height: 400 }}" alt="">
                    <span>
                        {{ product.title }}<br>
                    </span>
                    {% comment %} {{ product.price | money }}        {% endcomment %}
                </a>
                <div class="product-colors">
                    {% assign colors = product.metafields.custom.other_colors.value %}                
                    {% for color in colors %}                  
                        <a class="product-color"
                            href="{{ color.product_url }}"
                            style="background-color: {{ color.color }}; background-image: url({{ color.pattern  | image_url: height: 300 }});"
                            tabindex="0"
                        ></a>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>