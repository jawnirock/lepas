@import url("https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700&family=Playfair+Display:wght@500&display=swap");
body {
  font-family: "Inter", sans-serif;
  line-height: 1.3;
  font-size: 13px;
  font-weight: 500;
}

.container-main {
  margin: 0 auto;
  max-width: 1920px;
}

.header {
  font-family: "Playfair Display", serif;
  height: 130px;
  width: 100%;
  padding: 0 30px;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-pack: justify;
      -ms-flex-pack: justify;
          justify-content: space-between;
}
.header h1 {
  font-size: 55px;
}
.header a {
  color: black;
}
.header a:hover, .header a:active {
  text-decoration: none;
}
.header-search input {
  font-family: "Inter", sans-serif;
  font-size: 13px;
  font-weight: 400;
  border: 0;
  border-bottom: 1px solid black;
  background-repeat: no-repeat;
  background-position: right center;
  padding: 5px 0;
  background-size: 15px;
}
.header-search input:hover, .header-search input:focus {
  outline: none;
}

.menu {
  position: absolute;
  top: 130px;
  width: 16%;
  min-width: 185px;
  right: 0;
  padding: 0 30px;
}
.menu a {
  display: block;
  color: black;
}
.menu a:hover, .menu a:active {
  font-weight: 700;
  text-decoration: none;
}
.menu-left {
  left: 0;
}
.menu-right {
  right: 0;
  text-align: right;
}

.content-fit {
  margin: 0 auto;
  width: 68%;
  max-width: calc(100% - 370px);
}

.products {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-wrap: wrap;
      flex-wrap: wrap;
}
.products .product {
  text-transform: uppercase;
  margin: 5px;
  width: calc(33.33% - 30px);
}
.products .product a {
  color: black;
}
.products .product img {
  display: block;
  width: 100%;
  margin-bottom: 10px;
}
.products .product .product-colors {
  margin-top: 10px;
  margin-bottom: 40px;
  opacity: 0;
}
.products .product:hover .product-colors {
  opacity: 1;
}
.products .product:hover a {
  font-weight: 700;
  text-decoration: none;
}

.product-colors {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
}
.product-color {
  height: 5px;
  width: 30px;
  margin-right: 5px;
}
.product-page {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
}
.product-page .product-images {
  width: 8vw;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: end;
      -ms-flex-align: end;
          align-items: flex-end;
  -webkit-box-pack: end;
      -ms-flex-pack: end;
          justify-content: flex-end;
}
.product-page .product-images img {
  cursor: pointer;
  height: 5vw;
  aspect-ratio: 9/12;
  -o-object-fit: cover;
     object-fit: cover;
  margin-bottom: 5px;
}
.product-page .product-main {
  width: 35vw;
  padding-left: 15px;
  padding-right: 3vw;
}
.product-page .product-main img {
  width: 100%;
  aspect-ratio: 9/12;
  -o-object-fit: cover;
     object-fit: cover;
}
.product-page .product-info-title {
  font-weight: 700;
  line-height: 2;
  text-transform: uppercase;
  margin-bottom: 15px;
}
.product-page .product-info-desc {
  text-transform: uppercase;
  margin-bottom: 100px;
}
.product-page .product-color {
  height: 8px;
  width: 55px;
  margin-right: 5px;
  margin-bottom: 20px;
}
.product-page .custom-dropdown {
  width: 140px;
  position: relative;
}
.product-page .custom-dropdown .selected-variant {
  border: 1px solid black;
  padding: 3px 10px;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  cursor: pointer;
}
.product-page .custom-dropdown .selected-variant img {
  width: 23px;
}
.product-page .custom-dropdown .selected-variant img.reverse {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.product-page .custom-dropdown .dropdown-options {
  display: none;
  background-color: #F1F2F2;
  padding: 10px;
  position: absolute;
  width: 100%;
}
.product-page .custom-dropdown .dropdown-options .dropdown-option {
  padding: 10px 5px;
  width: 100%;
  cursor: default;
}
.product-page .custom-dropdown .dropdown-options .dropdown-option.stock {
  cursor: pointer;
}
.product-page .custom-dropdown .dropdown-options .dropdown-option.no-stock {
  text-decoration: line-through;
}
.product-page .custom-dropdown .dropdown-options .dropdown-option:hover {
  font-weight: 700;
}
.product-page #addToCartButton {
  display: none;
  background: white;
  border: 0px;
  font-size: 15px;
  font-weight: 700;
  text-transform: uppercase;
  margin-top: 30px;
  padding: 0;
}

.cart {
  display: none;
}
.cart-overlay {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
}
.cart-content {
  position: fixed;
  background: white;
  width: 28%;
  height: 100%;
  right: 0;
  top: 0;
  min-width: 350px;
  z-index: 12;
}
.cart-title {
  padding: 30px 0 0 40px;
  font-weight: 700;
}
.cart-items {
  padding: 30px;
  height: calc(100% - 185px);
  overflow: auto;
}
.cart-item {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: start;
      -ms-flex-align: start;
          align-items: flex-start;
  text-transform: uppercase;
  margin-bottom: 40px;
}
.cart-item img {
  aspect-ratio: 9/12;
  -o-object-fit: cover;
     object-fit: cover;
  height: 12vw;
  margin-right: 10px;
}
.cart button {
  background: white;
  border: 0px;
}
.cart button.remove-button {
  font-size: 10px;
  text-transform: uppercase;
}
.cart-footer {
  position: absolute;
  width: 100%;
  bottom: 0;
}
.cart-footer-top {
  border: solid black;
  border-width: 1px 0;
  padding: 10px 30px;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: end;
      -ms-flex-pack: end;
          justify-content: flex-end;
}
.cart-footer-buttons {
  height: 100px;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-pack: center;
      -ms-flex-pack: center;
          justify-content: center;
}
.cart-footer-buttons div {
  cursor: pointer;
  margin: 0 10px;
}
.cart-footer-buttons div:hover {
  text-decoration: underline;
}
.cart-footer-buttons a {
  background: black;
  color: white;
  padding: 10px;
  margin: 0 10px;
}
.search-title {
  margin-bottom: 40px;
  margin-left: 5px;
  text-transform: uppercase;
}

.image-container {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-wrap: nowrap;
      flex-wrap: nowrap; /* Ensure all items stay in one row without wrapping */
  overflow-x: auto; /* Enable horizontal scrolling if the content overflows the container */
}

.image-container img {
  height: auto; /* Allow the height to adjust according to the aspect ratio */
  width: auto; /* Allow the width to adjust according to the aspect ratio */
  max-width: 100%; /* Limit the width to prevent stretching */
  opacity: 0;
}